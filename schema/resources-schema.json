{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://sciencegateways.org/SGCIResource",
  "description": "Schema for an SGCI Resource",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "sgciResources"
  ],
  "properties": {
    "sgciResources": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/sgciResource"
      }
    }
  },
  "definitions": {
    "sgciResource": {
      "type": "object",
      "required": [
        "id",
        "name",
        "resourceType",
        "resource"
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/resourceId"
        },
        "name": {
          "$ref": "#/definitions/resourceName"
        },
        "description": {
          "type": "string",
          "maxLength": 2048
        },
        "resourceType": {
          "$ref": "#/definitions/resourceTypeDefinition"
        },
        "resource": {
          "oneOf": [
            {
              "$ref": "#/definitions/storageDefinition"
            },
            {
              "$ref": "#/definitions/computeDefinition"
            }
          ]
        },
        "hosts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/hostDefinition"
          }
        },
        "connections": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/connectionDefinition"
          }
        }
      }
    },
    "resourceId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "resourceName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "resourceTypeDefinition": {
      "type": "string",
      "enum": [
        "STORAGE",
        "COMPUTE"
      ]
    },
    "hostNameDefinition": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "dirPath": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024
    },
    "memorySizeSpec": {
      "type": "string"
    },
    "hostDefinition": {
      "type": "object",
      "oneOf": [
        {
          "required": [
            "hostname"
          ]
        },
        {
          "required": [
            "ip"
          ]
        }
      ],
      "properties": {
        "hostname": {
          "$ref": "#/definitions/hostNameDefinition"
        },
        "ip": {
          "type": "string"
        },
        "priority": {
          "type": "integer"
        }
      }
    },
    "connectionDefinition": {
      "type": "object",
      "required": [
        "connectionProtocol",
        "securityProtocol"
      ],
      "properties": {
        "connectionProtocol": {
          "type": "string",
          "enum": [
            "SSH",
            "GLOBUS",
            "HTTP",
            "SFTP",
            "SCP",
            "IRODS"
          ]
        },
        "securityProtocol": {
          "type": "string",
          "enum": [
            "PASSWORDS",
            "SSHKEYS",
            "X509",
            "OAUTH2"
          ]
        },
        "port": {
          "type": "integer"
        },
        "proxyHost": {
          "$ref": "#/definitions/hostNameDefinition"
        },
        "proxyPort": {
          "type": "integer"
        }
      }
    },
    "storageDefinition": {
      "type": "object",
      "required": [
        "storageType",
        "fileSystems"
      ],
      "properties": {
        "storageType": {
          "type": "string",
          "enum": [
            "POSIX",
            "S3",
            "OBJECT_STORE"
          ]
        },
        "connection": {
          "$ref": "#/definitions/connectionDefinition"
        },
        "fileSystems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/fileSystemDefinition"
          }
        },
        "capacity": {
          "type": "object",
          "properties": {
            "totalBytes": {
              "type": "integer"
            }
          }
        },
        "quota": {
          "type": "object",
          "properties": {
            "bytesPerUser": {
              "type": "integer"
            }
          }
        }
      }
    },
    "fileSystemDefinition": {
      "type": "object",
      "properties": {
        "rootDir": {
          "$ref": "#/definitions/dirPath"
        },
        "homeDir": {
          "$ref": "#/definitions/dirPath"
        },
        "scratchDir": {
          "$ref": "#/definitions/dirPath"
        },
        "workDir": {
          "$ref": "#/definitions/dirPath"
        },
        "archiveDir": {
          "$ref": "#/definitions/dirPath"
        }
      }
    },
    "computeDefinition": {
      "type": "object",
      "oneOf": [
        {
          "required": [
            "schedulerType",
            "batchSystem"
          ]
        },
        {
          "required": [
            "schedulerType",
            "forkSystem"
          ]
        }
      ],
      "properties": {
        "schedulerType": {
          "type": "string",
          "enum": [
            "FORK",
            "BATCH",
            "ON_DEMAND"
          ]
        },
        "connection": {
          "$ref": "#/definitions/connectionDefinition"
        },
        "executionCommands": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/executionCommandDefinition"
          }
        },
        "batchSystem": {
          "$ref": "#/definitions/batchSystemDefinition"
        },
        "forkSystem": {
          "$ref": "#/definitions/forkSystemDefinition"
        }
      }
    },
    "executionCommandDefinition": {
      "type": "object",
      "required": [
        "commandType"
      ],
      "properties": {
        "commandType": {
          "type": "string",
          "examples": [
            "serial",
            "mpi",
            "openmp",
            "ccm"
          ]
        },
        "commandPrefix": {
          "type": "string",
          "examples": [
            "ibrun",
            "mpirun"
          ]
        },
        "moduleDependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "batchSystemDefinition": {
      "type": "object",
      "required": [
        "jobManager"
      ],
      "properties": {
        "jobManager": {
          "type": "string",
          "enum": [
            "SLURM",
            "SGE",
            "PBS"
          ]
        },
        "commandPaths": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/commandPathDefinition"
          }
        },
        "partitions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/partitionDefinition"
          }
        }
      }
    },
    "commandPathDefinition": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "examples": [
            "SUBMISSION",
            "JOB_MONITORING",
            "DELETION",
            "CHECK_JOB",
            "SHOW_QUEUE",
            "SHOW_RESERVATION",
            "SHOW_START"
          ]
        }
      }
    },
    "partitionDefinition": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "examples": [
            "normal",
            "large-mem"
          ]
        },
        "totalNodes": {
          "type": "integer"
        },
        "nodeHardware": {
          "$ref": "#/definitions/nodeHardwareDefinition"
        },
        "computeQuotas": {
          "type": "object",
          "properties": {
            "maxJobsTotal": {
              "type": "integer"
            },
            "maxJobsPerUser": {
              "type": "integer"
            },
            "maxNodesPerJob": {
              "type": "integer"
            },
            "maxTimePerJob": {
              "type": "integer"
            },
            "maxMemoryPerJob": {
              "$ref": "#/definitions/memorySizeSpec"
            },
            "maxCPUsPerJob": {
              "type": "integer"
            },
            "maxGPUsPerJob": {
              "type": "integer"
            }
          }
        }
      }
    },
    "forkSystemDefinition": {
      "type": "object",
      "required": [
        "systemType"
      ],
      "properties": {
        "systemType": {
          "type": "string",
          "enum": [
            "Linux",
            "Windows"
          ]
        },
        "version": {
          "type": "string"
        },
        "nodeHardware": {
          "$ref": "#/definitions/nodeHardwareDefinition"
        }
      }
    },
    "nodeHardwareDefinition": {
      "type": "object",
      "properties": {
        "cpuType": {
          "type": "string"
        },
        "cpuCount": {
          "type": "integer"
        },
        "gpuType": {
          "type": "string"
        },
        "gpuCount": {
          "type": "integer"
        },
        "memoryType": {
          "type": "string"
        },
        "memorySize": {
          "$ref": "#/definitions/memorySizeSpec"
        }
      }
    }
  }
}